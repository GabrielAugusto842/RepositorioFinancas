<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_nome_despesa"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_valor_despesa"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_data_despesa"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/delete"
        android:layout_marginLeft="10dp"
        android:id="@+id/img_delete_despesa"
        android:onClick="excluirDespesa"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/edit"
        android:layout_marginLeft="10dp"
        android:id="@+id/img_edit_despesa"
        android:onClick="editarDespesa"/>

</LinearLayout>